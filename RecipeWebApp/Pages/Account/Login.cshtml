@page
@model RecipeWebApp.Pages.Account.LoginModel
@{
}

<section class="login-main-section">
    <div class="login-main-div">
        <div class="login-header">
            <h1>Login</h1>
        </div>
        <form class="login-form" method="post">
            <div class="email-input">
                <input class="input-styling" asp-for="@Model.user.Email" type="text" placeholder="youremail@gmail.com">
            </div>
            <div class="password-input">
                <input class="input-styling" asp-for="@Model.user.Password" type="password" placeholder="Rofus123...">
            </div>
        </form>
        <div class="login-submit-btn">
            <a asp-for="/Account/Forgot_password" id="forgot-password">Forgot Password?</a>
            <button type="submit">Login</button>
            <a asp-for="/Account/Create_account" id="create-account">Don't have an account?</a>
        </div>
    </div>
</section>